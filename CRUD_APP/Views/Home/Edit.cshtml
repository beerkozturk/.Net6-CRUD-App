@model EmployeeViewModel
<div>
    <h2>Update Employee</h2>

    <form method="post" asp-controller="Home" asp-action="Edit" enctype="multipart/form-data">
        @* <div asp-validation-summary="All"></div>  *@

        <div class="form-row">
            <input asp-for="viewEmployee.id" hidden />
            <div class="form-group col-md-6">
                <label asp-for="viewEmployee.firstName">First Name</label>
                <input asp-for="viewEmployee.firstName" class="form-control">
                <span asp-validation-for="viewEmployee.firstName" class="aler-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="viewEmployee.lastName">Last Name</label>
                <input asp-for="viewEmployee.lastName" class="form-control">
                <span asp-validation-for="viewEmployee.lastName" class="aler-danger"></span>
            </div>

            <div class="form-group col-md-6">
                <label asp-for="viewEmployee.job">Designation</label>
                <input asp-for="viewEmployee.job" class="form-control">
                <span asp-validation-for="viewEmployee.job" class="aler-danger"></span>
            </div>
        </div>

        <div class="form-group col-md-6">
            <label asp-for="viewEmployee.salary">Salary</label>
            <input asp-for="viewEmployee.salary" class="form-control">
            <span asp-validation-for="viewEmployee.salary" class="aler-danger"></span>
        </div>

        <div class="form-group col-md-6">
            <label asp-for="viewEmployee.hiredate">Joining Date</label>
            <input asp-for="viewEmployee.hiredate" class="form-control">
            <span asp-validation-for="viewEmployee.hiredate" class="aler-danger"></span>
        </div>

        <br />
        <button type="submit" class="btn btn-lg btn-primary p-2"><i class="bi bi-file-plus-fill"></i>Submit</button>
    </form>
</div>
