@{
}
@model EmployeeIndexViewModel
<div>
    <a class="text-center">
        <div class="container">
            <a asp-area="" asp-controller="Home" asp-action="Create">Create New</a>
        </div>
        <table class="table table-responsive bg-light">
            <thead>
                <tr>
                    <td>Designation</td>
                    <td>Salary</td>
                    <td>Joining Date</td>
                    <td>Action</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.salaries)
                {
                    <tr>
                        <td>@item.job</td>
                        <td>@item.salary</td>
                        <td>@item.hiredate</td>
                    </tr>
                }
            </tbody>
        </table>
</div>